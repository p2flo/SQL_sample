ALTER TABLE Pieski
ADD Color VARCHAR(50);

UPDATE Pieski
SET Color = CASE
    WHEN Imie = 'Miss' THEN 'Czarny'
    WHEN Imie = 'Elo' THEN 'Bia≈Çy'
    WHEN Imie = 'Nana' THEN 'Brazowy'
    ELSE 'Unknown' -- Handle other cases here
END

SELECT*FROM Pieski

UPDATE Pieski
SET Color = 'kolorowy'
WHERE Color IS NULL OR Color = 'Unknown';

